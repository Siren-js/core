{
  "name": "@siren-js/core",
  "version": "0.1.2",
  "description": "Core Siren.js functionality",
  "files": [
    "/dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src --ext .js",
    "test": "jest --env=jsdom && jest --env=node",
    "test:jsdom": "jest --env=jsdom",
    "test:node": "jest --env=node",
    "gen:types": "tsc",
    "compile": "babel src --out-dir dist --ignore src/**/__test__ && npm run gen:types",
    "build": "npm run format:check && npm run lint && npm test && npm run compile",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/siren-js/core.git"
  },
  "keywords": [
    "API",
    "HATEOAS",
    "hypermedia",
    "REST",
    "RESTful",
    "Siren"
  ],
  "author": "Dillon Redding",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/siren-js/core/issues"
  },
  "homepage": "https://github.com/siren-js/core#readme",
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/eslint-parser": "^7.13.8",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.9",
    "@types/jest": "^26.0.20",
    "babel-jest": "^26.6.3",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "jest": "^26.6.3",
    "prettier": "2.2.1",
    "typescript": "^4.2.3"
  }
}
