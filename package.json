{
  "name": "@siren/core",
  "version": "0.1.0",
  "description": "Core Siren.js functionality",
  "files": [
    "/dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "test": "jest --env=jsdom && jest --env=node",
    "test:jsdom": "jest --env=jsdom",
    "test:node": "jest --env=node",
    "test:coverage": "npm test -- --coverage",
    "compile": "tsc --project tsconfig.build.json",
    "compile:watch": "npm run compile -- --watch",
    "build": "npm run lint && npm test && npm run compile",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/siren-js/core.git"
  },
  "keywords": [
    "API",
    "HATEOAS",
    "hypermedia",
    "REST",
    "RESTful",
    "Siren"
  ],
  "author": "Dillon Redding",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/siren-js/core/issues"
  },
  "homepage": "https://github.com/siren-js/core#readme",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.18.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "jest": {
    "preset": "ts-jest",
    "rootDir": "src"
  }
}
