{
  "include": ["src/**/*", "test/**/*"],
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2015"
  }
}
